<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Wall Mount Ironing Center"
            android:textSize="15sp"
            android:textColor="@color/textPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle|end"
            android:weightSum="10"
            android:divider="?android:attr/dividerVertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/productImageViewContainer"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="@drawable/gridview_selector"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/productImageView"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/accessories"/>

                </FrameLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:showDividers="middle"
                android:layout_weight="9"
                android:weightSum="5"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:text="Qty"
                            android:textColor="@color/textSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:text="1"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/productQuantittyTextView" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_weight="8"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:text="Option"
                            android:textColor="@color/textSecondary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            android:textSize="14sp"
                            android:paddingRight="5dp"
                            android:text="Water Volleyball Court"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/productOptionTextView" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:showDividers="middle"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:divider="?android:attr/dividerVertical">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Remove"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/removeButton" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Edit"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/editButton" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:layout_margin="2dp"
                        android:gravity="center_vertical|right"
                        android:layout_weight="5"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="â‚¹1,500"
                        android:textStyle="bold"
                        android:background="@color/fb_cardTitleBackground"
                        android:id="@+id/productCostTextView"
                        style="normal" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
