<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e5e5"
    android:fillViewport="true"
    tools:context="merchant.MainActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e5e5e5"
        android:clickable="false"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true" >

        <FrameLayout
            android:id="@+id/coverPictureFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:foreground="@drawable/cover_selector" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/upload" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/coverPictureFrame"
            android:background="#e0e0e0"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <!-- android:background="@null" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="Shop Name"
                        android:textColor="@color/discoverRed"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/brandName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="Shop Name"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="true"
                        android:inputType="textPersonName"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:textSize="18sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandEmailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="Email"
                        android:textColor="@color/discoverRed"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/brandEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.22"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandWebsiteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingLeft="10dp"
                        android:text="Website"
                        android:textColor="@color/discoverRed"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/brandWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.22"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="Website"
                        android:imeOptions="actionNext"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandPhoneText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingLeft="10dp"
                        android:text="Phone"
                        android:textColor="@color/discoverRed"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/brandPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="Phone Number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandAddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Address"
                        android:textColor="@color/discoverRed"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <AutoCompleteTextView
                        android:id="@+id/brandAutoCompleteLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="Address"
                        android:imeOptions="actionNext"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp"
                        android:singleLine="true" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true" >

                    <TextView
                        android:id="@+id/brandAboutText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingLeft="10dp"
                        android:text="About"
                        android:textColor="@color/discoverRed"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/brandAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="start"
                        android:gravity="left"
                        android:hint="About"
                        android:imeOptions="actionNext"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="15dp" />
                </FrameLayout>

                <Button
                    android:id="@+id/brandCategory"
                    style="@style/MyButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Category"
                    android:textColor="#000001" />

                <View
                    android:id="@+id/divider11"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e5e5e5" />

                <Button
                    android:id="@+id/btnFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_main"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Get Facebook Page Data"
                    android:textColor="@color/white" />

                <View
                    android:id="@+id/divider12"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e5e5e5" />

                <Button
                    android:id="@+id/btnBeacon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_main"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Beacon Setup"
                    android:textColor="@color/white" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e5e5e5" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_main"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Log out"
                    android:textColor="@color/white" />
                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e5e5e5" />
                <Button
                    android:id="@+id/btnDisable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_main"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:text="Disable Account"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/profilePictureFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coverPictureFrame"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:clickable="true"
            android:foreground="@drawable/gridview_selector"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profilepic" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout1"
            android:layout_alignParentRight="true"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignBottom="@+id/profilePictureFrame"
            android:layout_alignRight="@+id/profilePictureFrame"
            android:src="@drawable/plus" />
    </RelativeLayout>

</ScrollView>